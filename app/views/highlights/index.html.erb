<p id="notice"><%= notice %></p>

<h1>Listing Highlights</h1>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Detalhes</th>
      <th>Link</th>
      <th>Está ativo?</th>
      <th>Imagem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @highlights.each do |highlight| %>
      <tr>
        <td><%= highlight.title %></td>
        <td><%= highlight.details %></td>
        <td><%= highlight.link %></td>
        <td><%= highlight.is_active %></td>
        <td><%= image_tag highlight.image.url(:thumb) %></td>
        <td><%= link_to 'Show', highlight %></td>
        <td><%= link_to 'Edit', edit_highlight_path(highlight) %></td>
        <td><%= link_to 'Destroy', highlight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Highlight', new_highlight_path %>
