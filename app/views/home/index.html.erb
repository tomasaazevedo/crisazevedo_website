<div class="highlights-box"> 
  <div class="highlights-container">
    <% if not @active_highlights.nil? %>
      <% @active_highlights.each do |ah| %>
        <div>
          <%= image_tag ah.image.url(:large)  %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<div class="releases_box">
  <h2>Lan√ßamentos</h2>
  <div class="row">
    <% @releases.each do |r| %>
      <% if r.product_images.first %>
        <div class="col-sm-6">
          <%= image_tag r.product_images.first.product_image.url(:large) %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>